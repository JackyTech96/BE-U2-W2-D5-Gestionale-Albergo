<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: #f4f4f4;">
    <nav style="background-color: #2d3250" class="navbar navbar-expand-sm navbar-toggleable-sm">
        <div class="container">
            @Html.ActionLink("EpiHotel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Attiva/Disattiva spostamento" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link text-white" })</li>
                    <li>@Html.ActionLink("Informazioni", "About", "Home", new { area = "" }, new { @class = "nav-link text-white" })</li>
                    <li>@Html.ActionLink("Clienti", "Index", "Cliente", new { area = "" }, new { @class = "nav-link text-white" })</li>
                    <li>@Html.ActionLink("Prenotazioni", "Index", "Prenotazione", new { area = "" }, new { @class = "nav-link text-white" })</li>
                    <li>@Html.ActionLink("Camere", "Index", "Camera", new { area = "" }, new { @class = "nav-link text-white" })</li>
                    <li style="margin-left:auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("Logout", "Logout", "Login", new { area = "" }, new { @class = "nav-link text-white" })
                        }
                        else
                        {
                            @Html.ActionLink("Registrati", "Signup", "Signup", new { area = "" }, new { @class = "nav-link text-white" })
                        }
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li style="padding-top: 5px;">
                            <span class="nav-item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#f8b17a" class="bi bi-person-fill" viewBox="0 0 16 16">
                                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                                </svg>
                            </span>
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Accedi", "Login", "Login", new { area = "" }, new { @class = "btn", style = "background-color: #f8b17a; color: #ffffff;" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Applicazione ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
