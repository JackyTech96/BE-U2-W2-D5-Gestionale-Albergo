@model BE_U2_W2_D5_Albergo.Models.Utente

@{
    ViewBag.Title = "Login";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Login</div>
                <div class="card-body">
                    @if (ViewBag.AuthError != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.AuthError
                        </div>
                    }

                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
                    {
                        <div class="mb-3">
                            @Html.LabelFor(model => model.Username, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", required = "true" })
                            <div class="invalid-feedback">
                               Inserisci il tuo Username.
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Password, new { @class = "form-label" })
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", required = "true" })
                            <div class="invalid-feedback">
                                Inserisci la tua Password.
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button style="background-color: #f8b17a; color:white" type="submit" class="btn">Login</button>
                        </div>
                        
                    }
                </div>
            </div>
        </div>
    </div>
</div>
