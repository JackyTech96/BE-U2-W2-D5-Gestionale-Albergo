@model BE_U2_W2_D5_Albergo.Models.Utente

@{
    ViewBag.Title = "Signup";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">Registrati</div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", id = "username", placeholder = "" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", id = "password", placeholder = "", type = "password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="d-flex justify-content-center">
                                <button style="background-color: #f8b17a; color:white" type="submit" class="btn">Crea l'account</button>
                            </div>

                        }
                    </div>
                </div>
                <div class="text-center mt-3">
                    @Html.ActionLink("Possiedi gia un account? Fai il login da qui.", "Login", new { @class = "btn btn-link" })
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


